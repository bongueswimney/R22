{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nemo",
  "version": "0.1.0",
  "identifier": "com.nemo.app",
  "build": {
    "frontendDist": "out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Nemo - Medical Data Analyst",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.nemo.app",
    "category": "Productivity",
    "shortDescription": "AI-powered medical data analysis platform",
    "longDescription": "Nemo is a desktop application for medical researchers to analyze datasets using natural language queries and local AI models. Built for privacy and offline operation."
  }
}
